<script id="textTpl" type="text/template">
  <div id="field{{index}}" class="panel panel-default">
    <div class="panel-heading">
      <div class="row">
        <div class="col-md-2"><h3 class="panel-title"><%= t("app.survey_field.label_name", :field_name =>t("app.survey_field.text.name")) %></h3> <span onclick="removeFieldType('field{{index}}')" style="cursor: pointer"><%=t "app.remove" %></span></div>
        <div class="col-md-10">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><%=t "app.preview" %></h3>
            </div>
            <div class="panel-body">
              <div class="form-group">
                <label class="col-lg-2 control-label" id="enunciado_{{index}}_pv" for="survey_form_Enunciado">{{title}} {{#mandatory}}*{{/mandatory}}</label>
                <div class="col-lg-9" >
                  <input type="text" class="form-control" id="cb_{{index}}_pv" />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label class="col-lg-2 control-label" id="mandatory_label" for="survey_form_Enunciado">Obrigat√≥rio?</label>
        <div class="col-lg-10" id="radio_{{index}}_pv">
            <div class="radio" id="radio_{{index}}_pv">
                <label><input type="radio" name="mandatory_option_{{index}}" id="mandatory_option_{{index}}" onchange="setMandatory(this)" {{#mandatory}}checked="true"{{/mandatory}} value="true"><label id="radio_{{index}}_pv_label">Sim</label></label><br>
                <label><input type="radio" name="mandatory_option_{{index}}" id="mandatory_option_{{index}}" onchange="setMandatory(this)" {{^mandatory}}checked="true"{{/mandatory}} value="false"><label id="radio_{{index}}_pv_label">Nao</label></label>
            </div>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-2 control-label"><%=t "app.enunciado" %></label>
        <div class="col-lg-10">
          <input type="text" id="enunciado_{{index}}" name="survey_form[survey_fields_attributes][][title]" class="form-control" placeholder="<%=t "app.enunciado" %>" onFocusOut="changeEnunciado(this)" value="{{title}}"/>
          <input type="hidden" name="survey_form[survey_fields_attributes][][survey_type_id]" value="1" />
          <input type="hidden" name="survey_form[survey_fields_attributes][][order]" value="{{index}}" />
          <input type="hidden" id="mandatory_option_{{index}}_val" name="survey_form[survey_fields_attributes][][mandatory]" value="{{#mandatory}}true{{/mandatory}}{{^mandatory}}false{{/mandatory}}" />
          {{#id}}
            <input type="hidden" name="survey_form[survey_fields_attributes][][id]" value="{{id}}" />
            <input type="hidden" id="field{{index}}_remove" name="survey_form[survey_fields_attributes][][_destroy]" value="0" />
          {{/id}}
        </div>
      </div>
    </div>
  </div>
</script>